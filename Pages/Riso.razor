@page "/riso"
@inject HttpClient Http

<PageTitle>Riso</PageTitle>

<h1>Tipologie di riso e quantità d'acqua</h1>

<p>Questa tabella mostra le tipologie di riso e la quantità d'acqua necessaria per 100g.</p>

@if (risi == null)
{
    <p><em>Caricamento...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tipo di riso</th>
                <th>Acqua per 100g (ml)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var riso in risi)
            {
                <tr>
                    <td>@riso.Tipo</td>
                    <td>@riso.AcquaPer100g ml</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TipoRiso>? risi;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Carica i dati dal file JSON
            risi = await Http.GetFromJsonAsync<List<TipoRiso>>("sample-data/Riso.json");
        }
        catch (Exception ex)
        {
            // Gestione dell'errore (puoi registrarlo o mostrare un messaggio)
            Console.WriteLine($"Errore nel caricamento dei dati: {ex.Message}");
            
            // Dati di fallback nel caso il file non sia disponibile
            risi = new List<TipoRiso>
            {
                new TipoRiso { Tipo = "Arborio", AcquaPer100g = 300 },
                new TipoRiso { Tipo = "Basmati", AcquaPer100g = 180 },
                new TipoRiso { Tipo = "Carnaroli", AcquaPer100g = 320 },
                new TipoRiso { Tipo = "Vialone Nano", AcquaPer100g = 280 }
            };
        }
    }

    public class TipoRiso
    {
        public string Tipo { get; set; } = string.Empty;
        public int AcquaPer100g { get; set; }
    }
}